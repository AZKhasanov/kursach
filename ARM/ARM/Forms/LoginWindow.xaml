<Window x:Class="ARM.Forms.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARM.Forms"
        mc:Ignorable="d"
        Title="Вход" Height="169" Width="505" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <TextBox Text="{Binding Login, Mode=TwoWay}" HorizontalAlignment="Left" Height="24" Margin="126,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" />
        <PasswordBox PasswordChanged="PasswordBox_PasswordChanged" HorizontalAlignment="Left" Height="24" Margin="126,62,0,0" VerticalAlignment="Top" Width="354" />

        <Button x:Name="ButtonSave" Content="Вход" HorizontalAlignment="Left" Margin="245,100,0,0" VerticalAlignment="Top" Width="106" Click="ButtonSave_Click"  />
        <Button x:Name="ButtonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="368,100,0,0" VerticalAlignment="Top" Width="111" Click="ButtonCancel_Click" />

        <Label Content="Логин" HorizontalAlignment="Left" Margin="23,32,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="23,62,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
